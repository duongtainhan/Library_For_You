<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bg_original">
    <TextView
        android:id="@+id/txtDemo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Demo Library Android"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_20sdp"
        android:textColor="@color/dim"
        android:textSize="@dimen/_30ssp"
        android:fontFamily="@font/sofia"
        android:textStyle="bold|italic"
        android:visibility="visible"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtTeam"
        android:text="GROUP 11"
        android:textStyle="bold"
        android:textColor="@color/dim2"
        android:textSize="@dimen/_35ssp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txtDemo"
        android:layout_marginTop="@dimen/_20sdp"
        android:visibility="visible"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtName"
        android:text="Dương Tài Nhân\nLê Ngọc Thành\nNguyễn Lê Trung"
        android:textColor="@color/dim1"
        android:textSize="@dimen/_25ssp"
        android:textStyle="italic"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txtTeam"
        android:layout_marginTop="@dimen/_20sdp"
        android:visibility="visible"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img_anim2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bg_1"
            android:visibility="invisible"/>
        <ImageView
            android:id="@+id/img_anim1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bg_0"
            android:visibility="invisible"/>
    </RelativeLayout>

</RelativeLayout>